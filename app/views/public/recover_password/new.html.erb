<h2>Recover password</h2>

<%= form_tag recover_password_index_url do %>

  <p>
    <%= text_field_tag "user[email]",'', class: "input-block-level", placeholder:"Enter you email" %>
    </p>
  <p>
    <%= text_field_tag "user[first_name]",'', class: "input-block-level", placeholder:"First name" %>
    </p>

  <p>
    <%= text_field_tag "user[last_name]",'', class: "input-block-level", placeholder:"Last name" %>
    </p>

  <p>
    <%= text_field_tag "user[secret]",'', class: "input-block-level", placeholder:"Enter you secret word" %>
   </p>

     <p>
    <%= text_field_tag "user[password]",'', class: "input-block-level", placeholder:"Your new password" %>
   </p>

     <p>
    <%= text_field_tag "user[password_confirmation]",'', class: "input-block-level", placeholder:"Repeat new password" %>
   </p>


   <%= submit_tag 'recover password', class:"btn btn-primary" %>

   <%= link_to "Cancel", new_session_url, class:"btn btn-primary" %>

<% end %>