<%= form_tag recover_password_index_url do %>

  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
    </p>
  <p>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name %>
    </p>

  <p>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name %>
    </p>

  <p>
    <%= label_tag :secret_word %><br />
    <%= text_field_tag :secret_word %>
   </p>

     <p>
    <%= label_tag 'new password' %><br />
    <%= text_field_tag :password %>
   </p>

     <p>
    <%= label_tag 'new password confirmation' %><br />
    <%= text_field_tag :password_confirmation %>
   </p>


   <%= submit_tag 'recover password', class:"btn btn-primary" %>

   <%= link_to "Cancel", new_session_url, class:"btn btn-primary" %>

<% end %>